<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ipgw.neu.androidneuloger.MainActivity"
    android:orientation="vertical">

    <com.material.widget.FloatingEditText
        android:id="@+id/user_name_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:floating_edit_text_highlighted_color="?attr/colorPrimary"
        android:cursorVisible="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        android:hint="用户名"/>


    <com.material.widget.FloatingEditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="textPassword"
        app:floating_edit_text_highlighted_color="?attr/colorPrimary"
        android:cursorVisible="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        android:hint="密码"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.material.widget.PaperButton
            android:id="@+id/login_on_button"
            android:layout_width="160dp"
            android:layout_height="64dp"
            app:paper_color="?attr/colorPrimary"
            app:paper_text="连接网络"
            app:paper_text_color="#fff"
            android:layout_alignRight="@id/password_input"
            android:layout_below="@id/password_input"
            app:paper_is_light_ripple="true"/>

        <com.material.widget.PaperButton
            android:id="@+id/login_off_button"
            android:layout_width="160dp"
            android:layout_height="64dp"
            app:paper_color="@color/colorGrey"
            app:paper_text="断开连接"
            app:paper_text_color="#fff"
            android:layout_alignRight="@id/password_input"
            android:layout_below="@id/password_input"
            app:paper_is_light_ripple="true"/>

    </LinearLayout>


</LinearLayout>
